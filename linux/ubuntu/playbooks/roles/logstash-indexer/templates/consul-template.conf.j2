consul {
  address = "127.0.0.1:8500"

  retry {
    enabled = true
    attempts = 12
    backoff = "250ms"
    max_backoff = "1m"
  }
}

template {
  source = "{{ consul_template_path }}/logstash.conf.ctmpl"
  destination = "{{ logstash_indexer_path }}/logstash.conf"

  command = "service logstash restart"
}
